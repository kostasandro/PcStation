@model Product

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="LayoutLinks">Προσθήκη προϊόντων</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Descr"></label>
            <input asp-for="Descr" class="form-control" />
            <span asp-validation-for="Descr" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>

        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Προσθήκη</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Επισροφή
        </a>
    </div>
</form>